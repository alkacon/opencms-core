<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:cms="urn:import:org.opencms.gwt.client.ui"
	xmlns:cmi="urn:import:org.opencms.gwt.client.ui.input" 
>
	<ui:with field="layout" type="org.opencms.gwt.client.ui.css.I_CmsInputLayoutBundle" />
	<ui:with field="main" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
<ui:style>
	div>div.fader{
		right: 19px;
		cursor: text;
		top: 0px;
		height: 18px;
	}
	.galleryField{
		position:relative;
		background: none repeat scroll 0 0 white;
    	margin-left: 170px;
    	margin-bottom: 5px;
    	border-radius: 3px;
    	width: auto;
	}
	.galleryField input {
		border: none;
		box-shadow: none;
		border-radius: 3px;
		width: 97%;
		height: 18px;
		font-size: 12px;
		color: #222222;
		padding: 0 0 0 4px;
    	font-family: Verdana,Helvetica,Arial,sans-serif;
	}
	.opener{
		position: absolute;
		right: 3px;
		top: 1px;
	}
	.imagePriview {
		height: 110px;
		width: 165px;
		float: left;
		border-radius: 3px;
		overflow: hidden;
		text-align: center;
	}
	.formats{
	 	height: 18px;
	 	width: auto;
	 	margin-left: 170px;
	 	margin-bottom: 5px;
	 	position: relative;
	}
	
	.descriptionField{
		margin-left: 170px;
	}
	div.clear{
		clear: both;
		height: 1px;
		overflow: hidden;
	}
	
</ui:style>
<g:HTMLPanel>
	<g:SimplePanel ui:field="m_imageField"  styleName="{style.imagePriview}" addStyleNames="{main.globalWidgetCss.textAreaBoxPanel}"/>
	<g:FlowPanel styleName="{style.galleryField}" addStyleNames="{main.globalWidgetCss.textAreaBoxPanel}">
		<cmi:CmsSimpleTextBox ui:field="m_textbox" />
		<cms:CmsPushButton ui:field="m_opener" addStyleNames="{style.opener}"/>
		<g:Label ui:field="m_fader" styleName="{layout.inputCss.vfsInputBoxFader}" addStyleNames="{style.fader}" />
	</g:FlowPanel>
	<cmi:CmsSelectBox ui:field="m_formatSelection" styleName="{style.formats}"/>
	<cmi:CmsTextArea  ui:field="m_descriptionArea" addStyleNames="{style.descriptionField}"/>
	<div class="{style.clear}" />
</g:HTMLPanel>
</ui:UiBinder>