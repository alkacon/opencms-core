<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:with field="resources" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
	<ui:style>
		table.main{
			display: block;
		}
		.icon{
			background-repeat: no-repeat;
			background-position: 50% 50%;
			vertical-align: middle;
			padding: 0px;
			width: 60px;
			float: none;
		}
		table.main div.message{
			vertical-align: middle;
			padding: 15px 15px 15px 15px;
			position: relative;
			max-height: 150px;
		}
		table.main div.message > p:first-child {
			margin-top: 0px;
		}
		table.main div.message > p {
			margin-top: 5px;
		}
	
		.outercontainer {
			overflow-x: auto;
		}
	</ui:style>
	<div class="{style.outercontainer} {resources.generalCss.cornerAll}" >
	<table class="{style.main} ">
		<tr><td><div ui:field="m_icon" class="{style.icon}" /></td><td><div ui:field="m_message" class="{style.message}"></div></td></tr>
	</table>
	</div>
</ui:UiBinder>