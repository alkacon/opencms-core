<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="style" type="org.opencms.gwt.client.ui.css.I_CmsLayoutBundle" />
	<g:HTMLPanel>
		<div class="{style.notificationCss.notificationOverlay}" />
		<div class="{style.notificationCss.notificationContainer}" >
			<span class="{style.notificationCss.loadingAnimation}"></span><br />
			<g:FlowPanel ui:field="m_messages" styleName="{style.notificationCss.messagesPanel}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 